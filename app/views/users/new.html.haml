- provide(:title, 'Sign up')
%transbox{:style => "position: relative; top: 150px; width: 5%"}
  %h1 Sign up
  .row
    .col-md-6.col-md-offset-3
      = form_for(@user) do |f|
        = render 'shared/error_messages'
        = f.label :name
        = f.text_field :name, class: 'form-control', style: "width:250px"
        = f.label :email
        = f.email_field :email, class: 'form-control', style: "width:250px"
        = f.label :password
        = f.password_field :password, class: 'form-control', style: "width:250px"
        = f.label :password_confirmation, "Confirmation"
        = f.password_field :password_confirmation, class: 'form-control', style: "width:250px"
        %br= f.submit "Create my account", class: "button3", style: "width:300px; font-size: 150%"